{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@bello/contracts": ["packages/contracts/src"],
      "@bello/web": ["packages/web/src"],
      "@bello/web/*": ["packages/web/src/*"]
    }
  },
  "buildOnSave": false
}
